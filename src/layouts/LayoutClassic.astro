
---
// Layout global 

import { ViewTransitions } from 'astro:transitions';

// Composant Communs
import Header from '../components/Header.astro';
import Credits from '../components/Credits.astro';

// Importez la fonction d'initialisation Lenis
import { initLenis } from '../components/lenis'

// Reception des props passées par les pages qui utilisent ce layout
const { title } = Astro.props;
const { description } = Astro.props;
const { pageName } = Astro.props;
const { pageClass } = Astro.props;


---

<html lang="fr">
    <head>
        <meta name="robots" content="noindex, nofollow">
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale = 1.0, maximum-scale=5.0"/>
        <title>Sté HOKOHA | {title}</title>

