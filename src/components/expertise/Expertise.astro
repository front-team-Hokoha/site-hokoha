---

import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/img/expertise/*.{png,jpg,jpeg,gif}')

interface Props {
  theme: string;
	titre: string;
  description: string;
  imgCouvPath: string;
  imgIllustrPath: string;
  stitre1:string;
  contenu1:string;
  stitre2:string;
  contenu2:string;
  stitre3:string;
  contenu3:string;
}

const { theme,titre, description,stitre1,stitre2,stitre3, contenu1,contenu2,contenu3,imgCouvPath, imgIllustrPath,  } = Astro.props;


// Récupérer l'image à partir du chemin `imgCouvPath`
console.log(images)
console.log(imgCouvPath)

const imageImport = Object.entries(images).find(([path]) => path.includes(imgCouvPath));
const imageMetadata = imageImport ? await imageImport[1]() : null;

---
<style>
  img {
    width:100%; 
    height:18rem;
    object-fit:cover;
    }
</style>

<div class=" appear  oka-expertise">
  <div class="flex-grid">

    <div class="col col-1"></div>

    <div class="col col-4">
      <div class="oka-spacer -md"></div>
      <p class="oka-text -sm" >{theme}</p>
      <div class="oka-h -lg noto-serif  -crop" set:html={titre} ></div>
      <div class="oka-spacer -xs"></div>
      <p class="oka-text -lg"  set:html={description} ></p>
      
    </div>

    <div class="col col-8" >
      
      {imageMetadata && (
        <Image src={imageMetadata.default} alt={`Hokoha Développement : ${titre}`} />
      )} 

    </div>
  </div>

     
  <div class="oka-spacer -md"></div>

  <div class="flex-grid">

    <div class="col col-1"></div>
    <div class="col col-4">
       
      {stitre1 && ( <p class="oka-h -xs">{stitre1}</p>)}
      {contenu1 && ( <p class="oka-text">{contenu1}</p>)}
    </div>
    <div class="col col-4">
      {stitre2 && ( <p class="oka-h -xs">{stitre2}</p>)}
      {contenu2 && ( <p class="oka-text">{contenu2}</p>)}
    </div>
    <div class="col col-4">
      {stitre3 && ( <p class="oka-h -xs">{stitre3}</p>)}
      {contenu3 && ( <p class="oka-text">{contenu3}</p>)}
    </div>
  </div>
  <div class="oka-spacer -lg"></div>

</div>

