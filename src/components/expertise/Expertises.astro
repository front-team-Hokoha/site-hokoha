    </div>

  <style>
.highlighted-text {

    position: relative;
    z-index:1;
 
}

.highlighted-text::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    height: 0.5em;
    width: 100%;
    background: yellow;
    transform: scaleX(0); /* Initialement masqué */
    transform-origin: left;
    transition: transform 0.5s ease; /* Ajoute une transition pour l’effet de surlignage */
    z-index: -1; /* Derrière le texte */
}

/* Classe pour activer le surlignage */
.highlighted-text.active::before {
    transform: scaleX(1); /* Le surlignage apparaît */
}

  </style>


<script>
const texts = document.querySelectorAll('.highlighted-text');

window.addEventListener('scroll', () => {
    const triggerPoint = window.innerHeight * (2 / 3);

    texts.forEach((text) => {
        const textPosition = text.getBoundingClientRect();

        // Ajoute la classe active quand le haut de l'élément atteint les deux tiers de la fenêtre
        if (textPosition.top <= triggerPoint) {
            text.classList.add('active');
        }
    });
});
</script>
