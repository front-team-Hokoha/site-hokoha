<div class="oka-argument appear oka-flip">
    <input type="checkbox" id={`flip-${nb}`} class="oka-flip__pilot" />       
    <div class="oka-flip__inner">
        <div class="oka-argument__intro oka-flip__front" >
            <label for={`flip-${nb}`} class="oka-flip__flipper"><i class="fa-regular fa-ellipsis"></i></label>
           
            <p class="oka-h -xs -secondary ">{theme}</p>
            <h2 class="oka-h -lg -secondary -crop" set:html={title}></h2>

            <div class="oka-spacer -lg"></div>
        </div>

        <div class="oka-argument__detail oka-flip__back">
          <label for={`flip-${nb}`} class="oka-flip__flipper"></label>
          <p class="oka-text -md "  set:html={body}></p>  
        </div>

    </div> 
</div>

