---
const { currentPage } = Astro.props; // Récupérer le nom de la page courante
---

<!-- Header -->

<style lang="scss">

@import "src/styles/oka-design-system/0-abstracts/breakpoints/breakpoints";

header{
    position:sticky;
    top:0;
    z-index: 20;
}

.oka-burger__ctnr {
    top: 0;
}

.oka-burger__content {
    
    // justify-content: flex-end;
    // padding-bottom:5rem;
    // @include breakpoint(md) {
    //     justify-content: flex-start;
    //     padding-bottom:0;
    // }

}
