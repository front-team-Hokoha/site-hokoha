---
const { currentPage } = Astro.props; // Récupérer le nom de la page courante
---


<!-- HEADER -->
<div class="oka-appbar layout-app__header" style="position:relative">
    <div class="oka-appbar__row oka-app-wrap">
        <section class="oka-appbar__left">
            HOKOHA
        </section>
        
        <!-- <section class="oka-appbar__center">
            section centre
        </section>  -->

        <section class="oka-appbar__right">
           
            <nav class="oka-burger">
                <!-- Label déclencheur ouverture du menu -->
                <label class="oka-bt -ghost oka-burger__openner" for="display-burger">
                    <span class="oka-bt__lbl">Menu</span>
                    <span class="oka-bt__ico -isClose"><i class="fa-sharp fa-solid fa-bars"></i></span>
                    <span class="oka-bt__ico -isOpen"><i class="fa-sharp fa-solid fa-xmark"></i></span>
                </label>
                
                <!-- Pilot d'ouverture du menu -->
                <input type='checkbox' id="display-burger"  class="oka-burger__pilot"/>

                <!-- Container -->
                <div id="burger" class="oka-burger__ctnr">
                    <!-- Fond pilot de fermeture -->
                    <label for="display-burger" class="oka-burger__closer"></label>
                    <!-- Contenu -->
                    <nav class="oka-burger__content">
                        
                        <a href="index.html" class={`oka-bt -ghost ${currentPage === 'Accueil' ? '-focus' : ''}`}>
                            
                            <div class="oka-bt__lbl">Accueil</div>
                            <div class="oka-spinner"></div>
                        </a>

                        <a href="entreprise" class={`oka-bt -ghost ${currentPage === 'Entreprise' ? '-focus' : ''}`}>
                            <div class="oka-bt__lbl">L'entreprise</div>
                            <div class="oka-spinner"></div>
                        </a>

                        <a href="#" class={`oka-bt -ghost ${currentPage === 'Savoir' ? '-focus' : ''}`}>
                            <div class="oka-bt__lbl">Savoir-Faire</div>
                            <div class="oka-spinner"></div>
                        </a>

                        <a href="#" class="oka-bt -ghost {{ pageSolutions ? '-focus'  }}">
                            <div class="oka-bt__lbl">Nos Solutions</div>
                            <div class="oka-spinner"></div>
                        </a>

                        <a href="#" class="oka-bt -outlined {{ pageContact ? '-focus'  }}">
                            <div class="oka-bt__lbl">Contactez-nous</div>
                            <div class="oka-spinner"></div>
                        </a>
                        
                    </nav>
                </div>
            </nav>
        </section>
    </div>
</div>